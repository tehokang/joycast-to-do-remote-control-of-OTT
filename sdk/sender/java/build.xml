    <target name="doc-internal" description="generate documentation">
        <javadoc sourcepath="${src.dir}" destdir="${doc.dir}/internal" 
                classpathref="joycast.sender.classpath" 
                version="true"
                windowtitle="${project.name} SDK for Internal" 
                doctitle="${project.name} SDK for Internal"
