                classpathref="joycast.sender.classpath" 
                version="true"
                windowtitle="${project.name} SDK for Customer" 
                doctitle="${project.name} SDK for Customer"
                linksource="yes"
                encoding="utf-8"
                charset="utf-8"
                docencoding="utf-8"
                bottom="Copyright Humax. All rights reserved.">
            <fileset dir="${src.dir}" defaultexcludes="yes">
                <include name="humaxdigital/joycast/DiscoveryManager.java"/>
                <include name="humaxdigital/joycast/SessionManager.java"/>
                <include name="humaxdigital/joycast/dial/DialServer.java"/>
