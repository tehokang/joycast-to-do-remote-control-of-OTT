        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="${bin.dir}" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="joycast.sender.classpath"/>
        </javac>
    </target>
              
    <target name="release-unittest-application">
        <jar jarfile="${release.dir}/${ant.project.name}-${version}-unittest.jar" 
            basedir="${bin.dir}" 
            includes="**">
            <manifest>
                <attribute name="Main-Class" value="humaxdigital.joycast.zexample.UnitTestApplication"/>
            </manifest>
            <zipgroupfileset dir="${lib.dir}" includes="**/*.jar"/>
        </jar>
    </target>
              
    <target depends="init,build-project" name="release-sdk">
        <jar jarfile="${release.dir}/${ant.project.name}-${version}.jar" 
            basedir="${bin.dir}" 
            includes="**/*.class" 
            excludes="humaxdigital/joycast/zexample/*.class">
            <zipgroupfileset dir="${lib.dir}" 
                includes="**/*.jar"
                excludes="**/http*.jar,**/commons*.jar,**/proguard.jar,**/META-INF/*"/>
        </jar>
    </target>
    
