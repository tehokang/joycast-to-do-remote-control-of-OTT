            -libraryjars ${lib.dir}/httpmime-4.5.3.jar
            -libraryjars ${lib.dir}/jackson-annotations-2.8.6.jar
            -libraryjars ${lib.dir}/jackson-core-2.8.6.jar
            -libraryjars ${lib.dir}/jackson-databind-2.8.6.jar
            -libraryjars ${lib.dir}/nv-websocket-client-1.4.jar
            -libraryjars ${java.home}/lib/rt.jar
            -injars ${release.dir}/${ant.project.name}-${version}.jar
            -outjars ${release.dir}/${ant.project.name}-${version}.min.jar
            -dontnote
            -dontwarn
            -keep class humaxdigital.joycast.** { 
                public *;
            }
            -keep interface humaxdigital.joycast.** {
                public *;
            }
            -keepattributes InnerClasses
