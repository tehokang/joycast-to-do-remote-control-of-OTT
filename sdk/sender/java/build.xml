        <taskdef resource="proguard/ant/task.properties"
                 classpath="${lib.dir}/proguard-4.11.jar" />
        <echo> ${java.home} </echo>
        <proguard overloadaggressively="on"
                 defaultpackage="humaxdigital.joycast"
                 allowaccessmodification="on"
                 printseeds="on"
                 obfuscate="yes">
            -libraryjars ${lib.dir}/commons-codec-1.9.jar
            -libraryjars ${lib.dir}/commons-logging-1.2.jar
            -libraryjars ${lib.dir}/httpclient-4.5.3.jar
            -libraryjars ${lib.dir}/httpclient-cache-4.5.3.jar
